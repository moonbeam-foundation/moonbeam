{
  "compilerOptions": {
    "incremental": false,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "./",
    "noEmit": false,
    "declaration": true,
    "declarationDir": "dist/types",
    "allowImportingTsExtensions": false,
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "module": "ESNext",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "scripts"]
}
