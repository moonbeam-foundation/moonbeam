{
  "compilerOptions": {
    "types": ["node"],

    // enable latest features
    "lib": ["esnext"],
    "module": "esnext",
    "target": "esnext",

    "moduleResolution": "bundler",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "moduleDetection": "force",
    "incremental": true,
    "baseUrl": "./",
    "importHelpers": true,
    "skipDefaultLibCheck": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noImplicitAny": false

    // "paths": {
    //   "@helpers/xcm": ["helpers/xcm.js"],
    //   "@helpers/block": ["helpers/block.js"],
    //   "@helpers/common": ["helpers/common.js"],
    //   "@helpers/assets": ["helpers/assets.js"],
    //   "@helpers/expect": ["helpers/expect.js"],
    // }  // We can enable this if we commit to using bun.js
  },
  "include": ["**/helpers/", "scripts"],
  "exclude": ["node_modules", "suites"]
}
