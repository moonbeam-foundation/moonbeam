{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2020",
    "outDir": "build",
    "baseUrl": "./",
    "moduleResolution": "nodenext",
    "importHelpers": true,
    "skipLibCheck": true,
    "removeComments": true,
    "noEmit": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "typeRoots": ["node_modules/@types"],
  "types": ["node"],
  "include": ["*suites/**/*.ts"],
  "exclude": ["node_modules/"]
}
