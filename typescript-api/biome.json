{
    "extends": [
        "../biome.json"
    ],
    "$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
    "javascript": {
        "formatter": {
            "trailingCommas": "none",
            "semicolons": "always",
            "indentStyle": "space",
            "lineWidth": 100,
            "quoteStyle": "double"
        }
    },
    "linter": {
        "rules": {
            "suspicious": {
                "noShadowRestrictedNames": "off"
            },
            "complexity": {
              "noBannedTypes": "warn"
            }
        }
    }
}
